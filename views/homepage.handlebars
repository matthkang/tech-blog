<!-- Loop over each object in the posts array -->
{{#each posts as |post|}}
<div class="card">
  <a href="/post/comments/{{post.id}}">
    <h3 class="card-header">
      <div class="row">
        <div class="col-auto">
          {{post.title}}
        </div>
        <div class="col-auto">
          Created by
          {{post.user.name}}
          on
          {{format_date post.date_created}}
        </div>
      </div>
    </h3>
    <h3 class="card-body">
      {{post.content}}
    </h3>
  </a>
</div>
{{/each}}