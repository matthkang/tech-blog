<div class="card">
  <h3 class="card-header d-flex justify-content-between align-items-center">Edit
    Post
  </h3>
  <h3 class="card-body">
    <form class="card-body post-form" data-id="{{id}}">
      <label class="form-label" for="title">Title</label>
      <input name="title" id="title" type="text" autofocus="true" class="form-input" value="{{title}}" />
      <label class="form-label" for="content">Content</label>
      <textarea name="content" id="content" rows="5" cols="33" class="form-textarea">{{content}}</textarea>

      <button type="submit" class="btn">Update Post</button>
      
    </form>
    <button id="delete" class="btn" data-id="{{id}}">Delete</button>
  </h3>
</div>

<script src="/js/editPost.js"></script>