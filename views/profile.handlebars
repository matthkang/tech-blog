<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="container container-fluid mt-5">
  {{#if posts.length}}
  {{#each posts as |post|}}
  <div class="card">
    <a href="/post/{{post.id}}">
      <h3 class="card-header">{{post.title}}
        Created on {{format_date post.date_created}}
      </h3>
    </a>
  </div>
  {{/each}}
  {{/if}}
</div>

<script src="./js/profile.js"></script>